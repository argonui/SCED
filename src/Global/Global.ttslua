function updateUniversalActionAbilityToken(obj, params)
  obj.call("updateClassAndSymbol", params)
end

function addUseName(obj, params)
  if params.useName == nil then return end
  if obj.memo == "resourceCounter" then
    obj.setName(params.useName .. " Counter")
  else
    obj.setName(params.useName)
  end
end

