<Defaults>
  <Button class="navbar"
    tooltipOffset="-300"
    tooltipPosition="Left"
    tooltipBackgroundColor="rgba(0,0,0,1)"
    color="#00000000"/>
  <VerticalLayout class="navbar"
    width="800"
    padding="75 75 75 75"
    scale="0.05 0.05 1"
    color="#000000"
    outlineSize="20 20"
    outline="#303030"
    rectAlignment="LowerRight"/>
</Defaults>

<!-- Action Tracker -->
<VerticalLayout class="navbar"
  offsetXY="-1 240"
  height="800">
  <Button id="BB_toggleActionTracker_tooltip"
    class="navbar"
    icon="actionTrackerToggle"
    tooltip="Action Tracker"
    onClick="onClick_toggleUi(actionTracker)"/>
</VerticalLayout>

<!-- Navigation Overlay + Bless / Curse Manager (height: n * width) -->
<VerticalLayout class="navbar"
  offsetXY="-1 160"
  height="1600">
  <Button id="BB_toggleBlessCurseManager_tooltip"
    class="navbar"
    icon="blurse"
    tooltip="Bless/Curse Manager"
    onClick="onClick_toggleUi(blessCurseManager)"/>
  <Button id="BB_toggleNavigationOverlay_tooltip"
    class="navbar"
    icon="NavigationOverlayIcon"
    tooltip="Navigation Overlay"
    onClick="onClick_toggleUi(Navigation Overlay)"/>
</VerticalLayout>

<!-- Download Menu + Option Panel (height: n * width) -->
<VerticalLayout class="navbar"
  visibility="Admin"
  offsetXY="-1 80"
  height="1600">
  <Button id="BB_toggleDownloadWindow_tooltip"
    class="navbar"
    icon="devourer"
    tooltip="Downloadable Content"
    onClick="onClick_toggleUi(downloadWindow)"/>
  <Button id="BB_toggleOptionPanel_tooltip"
    class="navbar"
    icon="option-gear"
    tooltip="Options"
    onClick="onClick_toggleOptionPanel"/>
</VerticalLayout>