<Defaults>
  <Button class="InputDialogButton"
    textColor="#FFFFFF"
    fontSize="26"
    font="font_teutonic-arkham"/>
</Defaults>

<VerticalLayout id="InputDialog"
  width="800"
  height="500"
  padding="15 15 15 15"
  spacing="10"
  color="#000000"
  outlineSize="1 1"
  outline="grey"
  rectAlignment="MiddleCenter"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  active="false">

  <Panel preferredHeight="50"
    color="#555555"
    padding="10 10 0 0">
    <Text id="InputDialog_title"
      fontSize="30"
      color="#FFFFFF"
      text="Input Dialog Title"
      rectAlignment="MiddleCenter" />
  </Panel>

  <VerticalScrollview scrollSensitivity="40"
    scrollbarColors="grey|grey|#C8C8C8|rgba(0.78,0.78,0.78,0.5)"
    horizontalScrollbarVisibility="AutohideAndExpandViewport"
    raycastTarget="true"
    preferredHeight="400">
    <InputField id="InputDialog_scrollableInput"
      lineType="MultiLineNewLine"
      width="100%"
      height="1000"
      onEndEdit="syncTextWithXml"
      text="Type your multi-line text here..."
      defaultText="Type your multi-line text here..."
      fontSize="18"
      color="#EEEEEE"
      textColor="#000000" />
  </VerticalScrollview>

  <HorizontalLayout width="95%"
    preferredHeight="50"
    spacing="25">
    <Button class="InputDialogButton"
      id="InputDialog_cancelButton"
      text="Cancel"
      onClick="onCancelClicked"
      color="#CC3333" />
    <Button class="InputDialogButton"
      id="InputDialog_loadButton"
      text="Load Last Config"
      onClick="onLoadClicked"
      color="#3333ccff" />
    <Button class="InputDialogButton"
      id="InputDialog_confirmButton"
      text="Confirm"
      onClick="onConfirmClicked"
      color="#33CC33" />
  </HorizontalLayout>

</VerticalLayout>
