<Panel id="InputDialog"
  width="800"
  height="500"
  rectAlignment="MiddleCenter"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  color="#333333"
  active="false">

  <Panel height="30"
    width="100%"
    rectAlignment="UpperCenter"
    color="#555555"
    padding="10 0 0 0">
    <Text id="InputDialog_title"
      fontSize="20"
      color="#FFFFFF"
      text="Input Dialog Title"
      rectAlignment="MiddleCenter" />
  </Panel>

  <VerticalScrollview scrollSensitivity="27"
    scrollbarColors="grey|grey|#C8C8C8|rgba(0.78,0.78,0.78,0.5)"
    horizontalScrollbarVisibility="AutohideAndExpandViewport"
    raycastTarget="true"
    width="95%"
    height="400"
    rectAlignment="UpperCenter"
    offsetXY="0 -45">
    <InputField id="InputDialog_scrollableInput"
      lineType="MultiLineNewLine"
      width="100%"
      height="1000"
      onEndEdit="syncTextWithXml"
      text="Type your multi-line text here..."
      defaultText="Type your multi-line text here..."
      rectAlignment="UpperCenter"
      fontSize="18"
      color="#EEEEEE"
      textColor="#000000" />
  </VerticalScrollview>

  <HorizontalLayout width="95%"
    height="60"
    spacing="25"
    padding="0 0 10 10"
    rectAlignment="LowerCenter">
    <Button id="InputDialog_cancelButton"
      text="Cancel"
      fontSize="20"
      onClick="onCancelClicked"
      textColor="#FFFFFF"
      color="#CC3333" />
    <Button id="InputDialog_confirmButton"
      text="Confirm"
      fontSize="20"
      onClick="onConfirmClicked"
      textColor="#FFFFFF"
      color="#33CC33" />
  </HorizontalLayout>

</Panel>