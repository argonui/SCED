<Defaults>
  <Text class="CTS"
    scale="0.4 0.4 1"
    font="font_teutonic-arkham"
    alignment="MiddleCenter"
    outline="black"
    outlineSize="3 -3"/>
  <Text class="modifier"
    fontSize="150"
    horizontalOverflow="Overflow"
    active="false"/>
</Defaults>

<Panel id="CTS_main"
  active="false">

  <HorizontalLayout id="CTS_modifier_container"
    height="150"
    position="0 420 0"
    childAlignment="MiddleCenter"
    ignoreLayout="True">
    <Text id="CTS_modifier1"
      class="CTS modifier"/>
    <Text id="CTS_modifier2"
      class="CTS modifier"/>
    <Text id="CTS_modifier3"
      class="CTS modifier"/>
    <Text id="CTS_modifier4"
      class="CTS modifier"/>
    <Text id="CTS_modifier5"
      class="CTS modifier"/>
  </HorizontalLayout>

  <HorizontalLayout id="CTS_image_container"
    height="200"
    spacing="20"
    position="0 275 0"
    childAlignment="MiddleCenter"
    ignoreLayout="True">
    <Image id="CTS_image1"
      active="false"/>
    <Image id="CTS_image2"
      active="false"/>
    <Image id="CTS_image3"
      active="false"/>
    <Image id="CTS_image4"
      active="false"/>
    <Image id="CTS_image5"
      active="false"/>
  </HorizontalLayout>

  <Text id="CTS_description"
    class="CTS"
    height="1250"
    width="1250"
    position="0 130 0"
    ignoreLayout="True"
    resizeTextForBestFit="true"
    resizeTextMinSize="85"
    horizontalOverflow="Wrap"
    verticalOverflow="Overflow">
  </Text>
</Panel>