<Defaults>
  <Text class="CTS"
    scale="0.4 0.4 1"
    ignoreLayout="True"
    font="font_teutonic-arkham"
    outline="black"
    outlineSize="3 -3"/>
</Defaults>

<Panel id="CTS_main"
  active="false">
  <Text id="CTS_modifier"
    class="CTS"
    height="500"
    width="500"
    position="0 420 0"
    fontSize="150">
  </Text>

  <Image id="CTS_image"
    height="200"
    width="200"
    position="0 275 0"
    ignoreLayout="True"/>

  <Text id="CTS_description"
    class="CTS"
    height="1250"
    width="1250"
    position="0 130 0"
    resizeTextForBestFit="true"
    resizeTextMinSize="85"
    horizontalOverflow="Wrap"
    verticalOverflow="Overflow">
  </Text>
</Panel>