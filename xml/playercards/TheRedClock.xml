<Defaults>
  <Button padding="50"
    font="font_teutonic-arkham"
    textColor="White"
    resizeTextForBestFit="true"
    resizeTextMaxSize="500"/>
</Defaults>

<TableLayout id="Helper"
  active="false"
  position="0 125 -40"
  rotation="0 0 180"
  height="350"
  width="1400"
  scale="0.1 0.1 1"
  cellSpacing="80"
  cellBackgroundColor="rgba(1,1,1,0)">
  <Row>
    <Cell>
      <Button id="CARD_TheRedClock_take_text"
        onClick="takeAll"
        color="#173B0BE6"
        text="Take"/>
    </Cell>
    <Cell>
      <Button id="CARD_TheRedClock_place_text"
        onClick="addCharge"
        color="#77674DE6"
        text="Place"/>
    </Cell>
  </Row>
</TableLayout>
